            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My File\",\n  \"content\": \"Sample text\",\n  \"folderId\": \"FOLDER_ID\"\n}"
            }
          }
        },
        {
          "name": "Get Files",
