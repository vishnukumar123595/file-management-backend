              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "files", "share"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fileId\": \"FILE_ID\",\n  \"userId\": \"USER_ID\"\n}"
            }
          }
        },
        {
          "name": "Restore File",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
